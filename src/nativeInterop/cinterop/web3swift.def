package = swift.web3swift
language = Objective-C

headers = web3swift/web3swift-Swift.h
headerFilter = web3swift/*

staticLibraries = libweb3swift.a
libraryPaths.ios_x64 = web3swift/build/Release-iphonesimulator
libraryPaths.ios_simulator_arm64 = web3swift/build/Release-iphonesimulator
libraryPaths.ios_arm64 = web3swift/build/Release-iphoneos

libraryPaths.macos_x64 = web3swift/build/Release
libraryPaths.macos_arm64 = web3swift/build/Release

linkerOpts = -L/usr/lib/swift
linkerOpts.ios_arm64 = -iphoneos_version_min 14.0.0 -L/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/swift/iphonesimulator/
linkerOpts.ios_x64 = -ios_simulator_version_min 14.0.0 -L/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/swift/iphonesimulator/
linkerOpts.ios_simulator_arm64 = -ios_simulator_version_min 14.0.0 -L/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/swift/iphonesimulator/
